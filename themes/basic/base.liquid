{%- for post in collections.posts -%}
  {%- if page.url == post.url -%}
    {%- assign fallbackTitle = post.templateContent -%}
  {%- endif -%}
{%- endfor -%}

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% if title %}{{ title }}{% else %}{{fallbackTitle | strip_html }}{% endif %}</title>

    <meta name="description" content="{{ site.description }}">
    <meta property="og:site_name" content="{{ site.title }}" />
    <meta property="og:title" content="{{ site.description }}" />
    <meta property="og:description" content="{{ date }}" />
    <meta property="og:url" content="{{ site.url }}{{ page.url }}" />
    <meta property="og:image" content="/images/card.jpg" />

    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="{{ site.url }}" />
    <meta name="twitter:creator" content="@vikramrojo" />
    <meta name="twitter:title" content="{{ site.description }}" />
    <meta name="twitter:description" content="{{ date }}" />
    <meta name="twitter:image" content="/images/card.jpg" />

    <link rel="icon" href="/favicon.svg">
    <link href="https://fonts.googleapis.com/css2?family=Mulish:wght@225&family=Piazzolla:wght@200&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/trim.css">
    
    <!--IndieWeb-->
    <link rel="authorization_endpoint" href="https://indieauth.com/auth">
    <link rel="token_endpoint" href="https://tokens.indieauth.com/token">
    <link rel="webmention" href="/11ndieweb/webmention">
    <link rel="micropub" href="/11ndieweb/micropub">
    <!--Style-->
  </head>

  <body>
    {% include partials/header %}
        {{ content | safe }}
  </body>
</html>